<IfModule mod_php4.c>
	php_value upload_max_filesize 300M
	php_value post_max_size 310M
</IfModule>
<IfModule sapi_apache2.c>
	php_value upload_max_filesize 300M
	php_value post_max_size 310M
</IfModule>
<IfModule mod_php5.c>
	php_value upload_max_filesize 300M
	php_value post_max_size 310M
</IfModule>

Options +FollowSymlinks
RewriteEngine On

RewriteBase /fire

#
# Put your custom rewrites below this line.
#

RewriteRule ^blog/?$ firerift.php/404.html [L]
RewriteRule ^blog/([^/]+)/?$ firerift.php/blog.html [L]
RewriteRule ^blog/([^/]+)/([^/]+)/?$ firerift.php/entry.html [L]

RewriteRule ^galleries/?$ firerift.php/galleries.html [L]
RewriteRule ^galleries/([^/]+)/?$ firerift.php/gallery.html [L]

RewriteRule ^about/?$ firerift.php/about.html [L]

#
# DO NOT edit below this line.
# Below are the core Firerift rules.
#
RewriteRule ^app/?$ firerift.php/app/dashboard/ [L,QSA]
RewriteRule ^app/(.*)$ firerift.php/app/$1 [L,QSA]
RewriteRule ^api/(.*)$ firerift.php/api/$1 [L,QSA]
RewriteRule ^upload/(.*)$ firerift.php/upload/$1 [L,QSA]
RewriteRule ^feed/(.*)$ firerift.php/feed/$1 [L,QSA]
RewriteRule ^install/([^/]+)$ install/$1 [L,QSA]

RewriteCond %{REQUEST_URI} !firerift.php 
RewriteRule ^(.*)$ firerift.php/$1 [L,QSA,NC]



